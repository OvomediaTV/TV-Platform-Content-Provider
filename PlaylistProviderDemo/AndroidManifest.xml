<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.playlistproviderdemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <provider android:name="PlaylistProvider" android:authorities="com.example.playlistproviderdemo.provider.OVOPlaylistProvider" android:enabled="true" android:exported="true"></provider>
        <activity android:name="MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
